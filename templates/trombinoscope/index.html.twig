{% extends 'base.html.twig' %}

{% block title %}Trombinoscope{% endblock %}

{% block stylesheets %}         
    <link rel="stylesheet" href="{{ asset ('css/trombinoscopestyle.css') }}">
{% endblock %}

{% block body %}   
    <section id="cadres">
        <div id="menu"><div id="openbutton"><i class="fas fa-bars"></i></div></div>
        <div id="banniere">
            <img src="{{ asset('/uploads/' ~ user.photobandeau) }}" alt="photo bannière">
            <div id="cadreprofil">
                <img src="{{ asset('/uploads/' ~ user.photoprofil) }}" width="180px" height="180px" alt="photo profil">
            </div>
        </div>
        <h1>Le Trombinoscope</h1>
        <div id="search">
            <div id="research">
                <div id="btnsearch"><i class="fas fa-search"></div></i><input type="text" placeholder="Rechercher...">
            </div>
        </div>
        <div id="cartes">
            {% for user in users %}
            <div id="carte">
                <div id="imgfond">
                    <img src="{{ asset('/uploads/' ~ user.photobandeau) }}"alt="photo bannière">
                    <div id="picprofil">
                        <img src="{{ asset('/uploads/' ~ user.photoprofil) }}"alt="photo profil">
                    </div>
                </div>
                <div class="ville">{{user.chocolaterie}}</div>
                    <div id="identite">
                        <h2>{{user.prenom}} {{user.nom}}</h2>
                        <h3>{{user.poste}}</h3>
                    </div>
                    <div id="icones">
                        <div class="icone"><i class="fab fa-facebook-f"></i></div>
                        <div class="icone"><i class="fab fa-instagram"></i></div>
                        <div class="icone"><i class="fab fa-twitter"></i></div>
                        <div class="icone"><i class="fab fa-linkedin-in"></i></div>
                    </div>
                    <a href="{{ path('profil', {'id': user.id}) }}"><button><i class="fas fa-eye"></i> Voir le profil </button></a>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>      
    <script src="https://kit.fontawesome.com/508ebce8fc.js"></script>
{% endblock %}
