{# {% extends 'base.html.twig' %} #}

 {% block title %}Log in!{% endblock %} 

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/loginstyle.css') }}"> 
{% endblock %} 

{% block body %}
<form method="post">
  {% if error %}
  <div class="alert alert-danger">
    {{ error.messageKey|trans(error.messageData, 'security') }}
  </div>
  {% endif %} {% if app.user %}
  <div class="mb-3">
    Vous êtes connecté en tant que {{ app.user.username }},
    <a href="{{ path('app_logout') }}">Se déconnecter</a>
  </div>
  {% endif %}

  <div class="logo">
    <img
      src="../img/logo-david-kenos-blanc.png"
      alt="logo"
      width="250px"
      height="250px"
    />
  </div>

  <div class="logintitle">
    <h2>Hâte de nous retrouver ?</h2>
  </div>

  <div class="loginconnection">
    <h1 class="h3 mb-3 font-weight-normal">Connecte-toi !</h1>
  </div>

  <div class="loginform">
    <label for="inputEmail"></label>
    <input
      type="email"
      value="{{ last_username }}"
      name="email"
      placeholder="Identifiant"
      id="inputEmail"
      class="form-control"
      autocomplete="email"
      required
      autofocus
    />

    <label for="inputPassword"></label>
    <input
      type="password"
      name="password"
      placeholder="Mot de passe"
      id="inputPassword"
      class="form-control"
      autocomplete="current-password"
      required
    />

    <input
      type="hidden"
      name="_csrf_token"
      value="{{ csrf_token('authenticate') }}"
    />

    {# Uncomment this section and add a remember_me option below your firewall
    to activate remember me functionality. See
    https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
      <label> <input type="checkbox" name="_remember_me" /> Remember me </label>
    </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
  </div>
</form>
{% endblock %}
