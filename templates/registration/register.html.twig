{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.chocolaterie)}}
        {{ form_row(registrationForm.poste) }}
        {{ form_row(registrationForm.description) }}
        {{ form_row(registrationForm.photoprofil) }}
        {{ form_row(registrationForm.photobandeau) }}
        {{ form_row(registrationForm.facebook) }}
        {{ form_row(registrationForm.twitter) }}
        {{ form_row(registrationForm.instagram) }}
        {{ form_row(registrationForm.linkedin) }}
        {# {{ form_row(registrationForm.roles)}} #}
        
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
