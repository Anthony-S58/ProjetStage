{% extends 'baseadmin2.html.twig' %}

{% block title %}Chocolaterie index
{% endblock %}

{% block body %}
	<h1>Chocolaterie index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Ville</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for chocolaterie in chocolateries %}
				<tr>
					<td>{{ chocolaterie.id }}</td>
					<td>{{ chocolaterie.ville }}</td>
					<td>
						<a href="{{ path('admin_chocolaterie_show', {'id': chocolaterie.id}) }}">show</a>
						<a href="{{ path('admin_chocolaterie_edit', {'id': chocolaterie.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_chocolaterie_new') }}">Create new</a>
{% endblock %}
